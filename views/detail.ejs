<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>

      <% if (!contact) { %>
        <div class="alert alert-danger fw-bold" role="alert">
          Data contact tidak ada. <br>
          <a href="/contacts" class="alert-link fw-normal">&laquo; Kembali ke daftar contact</a>.
        </div>
      <% } else { %>

      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHP %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contacts/edit/<%= contact.nama %>" class="btn btn-warning badge">Edit</a>
          <a href="/contacts/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('yakin?');">Hapus</a>
          <a href="/contacts" class="card-link text-decoration-none d-block mt-3">&laquo; Kembali</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>